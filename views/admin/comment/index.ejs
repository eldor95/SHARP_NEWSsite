<div class="row">
    <div class="col-12">

        <div style="
          display: flex;
          flex-direction: row;
          justify-content: space-between; 
          align-items: center;
        ">
            <h4 class="m-3" style="font-weight: 700;">Foydalanuvchilar bulimi</h4>

            <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target=".bs-example-modal-lg">
          Foydalanuvchi qushish
        </button>
        </div>



        <div class="card m-b-30">
            <div class="card-body">



                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>message</th>
                            <th>news_ID</th>
                            <th>user_ID</th>


                        </tr>
                    </thead>

                    <tbody>
                        <% for(let item of result) {%>
                            <tr>
                                <td>
                                    <%= item.message  %>
                                </td>
                                <td>
                                    <%= item.news_ID  %>
                                </td>
                                <td>
                                    <%= item.user_ID  %>
                                </td>

                                <td style=" display: flex; flex-direction: row; justify-content: space-around; align-items: center;">

                                    <a class="btn btn-warning" href="<%=`/comment/${item._id}`%>">
                                        <i class="fas fa-cog"></i>
                                    </a>
                                    <form method="POST" class="hidden-r" action="<%=`/comment/${item._id}?_method=DELETE`%>">
                                        <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                      </button>
                                    </form>
                                </td>

                            </tr>
                            <% } %>
                    </tbody>


                </table>

            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Kategoriya yaratish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            </div>
            <div class="modal-body">
                <form action="/comment/create" method="POST">
                    <div class="mb-4">
                        <input type="text" name="name" class="form-control" placeholder=" Kommentariya kiriting" />
                    </div>
                    <select name="user_ID" class="form-control">
                        <option style="font-weight: bold"> User_ID kiriting ...</option>
                        <% for (let itm of User) {%>
                          <option value="<%= itm._id %>">
                            <%= itm.name %>
                          </option>
                          <% } %>
                      </select>

                    <div class="mb-4">
                        <input type="text" name="news_ID" class="form-control" placeholder=" news_ID kiriting" />
                    </div>

                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </form>
            </div>
        </div>
    </div>
</div>